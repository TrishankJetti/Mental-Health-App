@* Views/Invite/Index.cshtml *@
@{
    ViewData["Title"] = "Invite a Friend";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-purple text-white">
                    <h4 class="mb-0">Invite a Friend to Shanti</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="Send" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Friend's Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                   required placeholder="friend@example.com">
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Personal Message (Optional)</label>
                            <textarea class="form-control" id="message" name="message"
                                      rows="3" placeholder="I think you'd love this app for managing stress..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-purple w-100">
                            <i class="bi bi-envelope"></i> Send Invitation
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>