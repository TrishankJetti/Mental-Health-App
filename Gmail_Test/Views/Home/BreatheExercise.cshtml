@{
    ViewData["Title"] = "Breathing Exercise";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional layout
}

<div class="breathing-wrapper">
    <h1 class="breathe-title">Take a Deep Breath</h1>

    <br/>
    <br/>
    <div class="circle-container">
        <div class="circle"></div>

        <div class="breathing-text inhale">Inhale</div>
        <div class="breathing-text hold1">Hold</div>
        <div class="breathing-text exhale">Exhale</div>
        <div class="breathing-text hold2">Hold</div>
    </div>

    <br/>
    <br/>
    <br/>
    <p class="breathe-note">Mimic your breathe to follow the motions of the circle as it contracts and expands.</p>
</div>


<style>
.breathing-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    text-align: center;
    padding: 20px;
}

.breathe-title {
    font-size: 2.5rem;
    color: #6b44b3;
    margin-bottom: 40px;
}

.circle-container {
    position: relative;
    width: 250px;
    height: 250px;
    margin-bottom: 30px;
}

.circle {
    width: 100%;
    height: 100%;
    background-color: #6b44b3;
    border-radius: 50%;
    opacity: 0.8;
    animation: breathe-circle 8s infinite;
}

.breathing-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 24px;
    font-weight: bold;
    color: white;
    opacity: 0;
    animation-duration: 8s;
    animation-iteration-count: infinite;
    animation-fill-mode: both;
}

.inhale {
    animation-name: showInhale;
}
.hold1 {
    animation-name: showHold1;
}
.exhale {
    animation-name: showExhale;
}
.hold2 {
    animation-name: showHold2;
}

@@keyframes breathe-circle {
    0%   { transform: scale(1); }
    25%  { transform: scale(1.4); } /* Inhale */
    50%  { transform: scale(1.4); } /* Hold */
    75%  { transform: scale(1); }   /* Exhale */
    100% { transform: scale(1); }   /* Hold */
}

@@keyframes showInhale {
    0%   { opacity: 1; }
    24%  { opacity: 1; }
    25%  { opacity: 0; }
    100% { opacity: 0; }
}

@@keyframes showHold1 {
    0%   { opacity: 0; }
    24%  { opacity: 0; }
    25%  { opacity: 1; }
    49%  { opacity: 1; }
    50%  { opacity: 0; }
    100% { opacity: 0; }
}

@@keyframes showExhale {
    0%   { opacity: 0; }
    49%  { opacity: 0; }
    50%  { opacity: 1; }
    74%  { opacity: 1; }
    75%  { opacity: 0; }
    100% { opacity: 0; }
}

@@keyframes showHold2 {
    0%   { opacity: 0; }
    74%  { opacity: 0; }
    75%  { opacity: 1; }
    100% { opacity: 1; }
}

.breathe-note {
    color: #6c757d;
}
</style>
