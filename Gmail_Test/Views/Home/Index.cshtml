@using Microsoft.AspNetCore.Identity
@using MentalHealthApp.Models

@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentUser = await UserManager.GetUserAsync(User);
    var firstName = currentUser?.FirstName ?? "Guest";
}
<div class="homepage-container">
    <h1 class="welcome-text">
        Welcome to Shanti,<br />
        @firstName!
    </h1>

    <div class="carousel-container">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner rounded">
                <div class="carousel-item active">
                   
                        <img src="~/img/1SlideShow.png" class="d-block w-100 rounded" alt="Slide 1" />
                   
                </div>
                <div class="carousel-item">
                    <img src="~/img/2SlideShow.png" class="d-block w-100 rounded" alt="Slide 2" />
                </div>
                <div class="carousel-item">
                    <img src="~/img/3SlideShow.png" class="d-block w-100 rounded" alt="Slide 3" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <p class="welcome-subtext">Explore tools to support your mental wellbeing.</p>

    <div class="container my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <img src="~/img/Group 1.png" class="card-img-top mx-auto mt-3" style="max-width: 80px;" alt="Mindfulness" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mindfulness Exercises</h5>
                        <p class="card-text flex-grow-1">Learn techniques to stay present and reduce stress with guided mindfulness activities.</p>
                        <a href="@Url.Action("BreatheExercise", "Home")" class="btn btn-purple mt-auto">Explore</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <img src="~/img/Group 2.png" class="card-img-top mx-auto mt-3" style="max-width: 80px;" alt="Journal" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Daily Journal</h5>
                        <p class="card-text flex-grow-1">Track your moods and thoughts to understand your mental health patterns better.</p>
                        <a href="@Url.Action("Index", "MoodEntries")" class="btn btn-purple mt-auto">Start Journaling</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <img src="~/img/Group 3.png" class="card-img-top mx-auto mt-3" style="max-width: 80px;" alt="Support" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Find Support</h5>
                        <p class="card-text flex-grow-1">Connect with therapists and support groups tailored for your needs.</p>
                        <a href="@Url.Action("Index", "Therapists")" class="btn btn-purple mt-auto">Get Support</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5 text-center fst-italic fs-5 text-primary" style="color:#6b44b3;">
            <blockquote class="blockquote">
                "Your Greatest Battle is the One with Yourself."
            </blockquote>
            <cite class="blockquote-footer">Shanti Team</cite>
        </div>
    </div>


<style>
    .homepage-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 15px;
        text-align: center;
    }

    .welcome-text {
        font-size: 50px;
        font-weight: 700;
        color: #6b44b3;
        margin-bottom: 40px;
    }

    .carousel-container {
        margin-bottom: 30px;
    }

    .welcome-subtext {
        font-size: 20;
        color: #6c757d;
        margin-bottom: 50px;
    }


        .btn-purple {
            background-color: #6b44b3;
            color: #fff;
            border: none;
        }

            .btn-purple:hover {
                background-color: #583a9a;
                color: #fff;
            }

    
</style>
