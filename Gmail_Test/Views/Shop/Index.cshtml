@model IEnumerable<MentalHealthApp.Models.Product>
@using MentalHealthApp.Models 
@{
    ViewData["Title"] = "Shop";

    var currentSearch = ViewData["CurrentFilter"] as string;
    var currentPriceOrder = ViewData["CurrentPriceOrder"] as string;
    var currentCategory = ViewData["CurrentCategoryFilter"] as ProductCategory?;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


<!-- Optionally, Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


<style>
    .shop-header {
        color: #6b44b3;
        font-weight: 600;
    }

    .product-img {
        height: 200px;
        object-fit: cover;
        border-radius: 0.5rem;
    }

    .btn-purple {
        background-color: #6b44b3;
        color: white;
        transition: transform 0.2s ease-in-out;
    }

        .btn-purple:hover {
            background-color: #59359b;
            transform: scale(1.05);
        }

    .bg-purple { 
        background-color: #6b44b3;
    }
</style>


@if (Model.Any())
{
    @if (TempData["Toast"] != null)
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
            <div class="toast show align-items-center text-white bg-success border-0" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["Toast"]
                        <br />
                        <a asp-controller="Cart" asp-action="Index" class="link link-light">Click to View Cart</a>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>
    }

    <div class="container py-5">
        <div class="bg-light border-bottom py-3 px-3 d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <img src="~/img/mascot-banner.png" alt="Shanti Mascot" style="height: 80px; width: auto;" class="me-3" />
                <div>
                    <h4 class="mb-0 fw-bold text-dark">Welcome to the Shanti Shop</h4>
                    <small class="text-muted">Explore calming products chosen to support your well-being</small>
                </div>
            </div>
        </div>

        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 mt-3">
         
            <form asp-action="Index" method="get" class="d-flex mb-2 mb-md-0">
                <input type="text" name="searchString" value="@currentSearch" class="form-control me-2" placeholder="Search..." />
                <button type="submit" class="btn btn-outline-secondary">Search</button>
            </form>

            <form asp-action="Index" method="get" class="d-flex mb-2 mb-md-0">
                <input type="text" name="searchString" value="@currentSearch" class="form-control me-2" placeholder="Search..." />
                <button type="submit" class="btn btn-outline-secondary me-2">Search</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-danger">Clear</a>
            </form>

            <div class="d-flex flex-wrap gap-2">
             
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="categoryFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-tags"></i> Category: @(currentCategory.HasValue ? currentCategory.Value.ToString() : "All")
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="categoryFilterDropdown">
                        <li><a class="dropdown-item @(!currentCategory.HasValue ? "active" : "")" href="@Url.Action("Index", new { searchString = currentSearch, priceOrder = currentPriceOrder })">All Categories</a></li>
                        @foreach (var category in Enum.GetValues(typeof(ProductCategory)))
                        {
                            <li class="dropdown-item @(currentCategory == (ProductCategory)category ? "active" : "")">
                                <a href="@Url.Action("Index", new { searchString = currentSearch, priceOrder = currentPriceOrder, categoryFilter = category })">@category.ToString()</a>
                            </li>
                        }
                    </ul>
                </div>

               
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#priceSortModal">
                    <i class="bi bi-funnel"></i> Sort by Price
                </button>
            </div>

       
            <div class="modal fade" id="priceSortModal" tabindex="-1" aria-labelledby="priceSortModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content rounded-3">
                        <div class="modal-header bg-purple text-white">
                            <h5 class="modal-title" id="priceSortModalLabel">
                                <i class="bi bi-funnel-fill me-2"></i> Sort Products by Price
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="d-grid gap-3">
                                <a href="@Url.Action("Index", new { searchString = currentSearch, categoryFilter = currentCategory, priceOrder = "price_asc" })" class="btn btn-outline-success w-100 @(currentPriceOrder == "price_asc" ? "active" : "")">
                                    <i class="bi bi-arrow-up-circle me-2"></i> Low to High
                                </a>

                                <a href="@Url.Action("Index", new { searchString = currentSearch, categoryFilter = currentCategory, priceOrder = "price_desc" })" class="btn btn-outline-danger w-100 @(currentPriceOrder == "price_desc" ? "active" : "")">
                                    <i class="bi bi-arrow-down-circle me-2"></i> High to Low
                                </a>

                                <a href="@Url.Action("Index", new { searchString = currentSearch, categoryFilter = currentCategory })" class="btn btn-outline-secondary w-100 @(string.IsNullOrEmpty(currentPriceOrder) ? "active" : "")">
                                    <i class="bi bi-arrow-clockwise me-2"></i> Default
                                </a>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <style>
            .carousel-container {
                max-width: 800px; /* Adjust this value as needed */
                margin-left: auto;
                margin-right: auto;
            }
        </style>

        <p class="text-muted mb-3">
            @if (Model.Any())
            {
                <span>@Model.Count() product@(Model.Count() == 1 ? "" : "s") found.</span>
            }
        </p>


        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="row align-items-center py-4 border-bottom">
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                        <img src="~/img/@item.ImageUrl" alt="@item.Name"
                             class="img-fluid rounded shadow-sm"
                             style="max-height: 180px; object-fit: cover;" asp-append-version="true" />
                    </div>
                    <div class="col-md-8">
                        <h4 class="fw-bold text-dark mb-1">@item.Name</h4>
                        <p class="text-muted mb-2">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-success fw-semibold fs-5">$@item.Price</span>
                            <form asp-controller="Cart" asp-action="AddWithToast" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <input type="hidden" name="productName" value="@item.Name" />
                                <input type="hidden" name="price" value="@item.Price" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm btn-purple px-4">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="text-center">
        <img src="~/img/undraw_feeling-blue_8si6.png"
             alt="No items available"
             style="max-width: 500px; width: 100%; height: auto;" />
        <p class="mt-3 text-muted">No items available right now.</p>

        <a href="javascript:history.back()" class="btn btn-purple mb-4">
            <i class="bi bi-arrow-left-circle me-2"></i> Back
        </a>
    </div>
}