@model MentalHealthApp.Models.MoodEntry

@{
    ViewData["Title"] = "Diary Entry";

    var moodClass = "bg-secondary";
    var moodIcon = "bi-emoji-neutral";

    var moodValue = Model.Mood.ToString().ToLower() ?? "";

    if (moodValue.Contains("happy") || moodValue.Contains("good"))
    {
        moodClass = "bg-info";
        moodIcon = "bi-emoji-smile";
    }
    else if (moodValue.Contains("sad") || moodValue.Contains("down"))
    {
        moodClass = "bg-primary";
        moodIcon = "bi-emoji-frown";
    }
    else if (moodValue.Contains("angry") || moodValue.Contains("frustrated"))
    {
        moodClass = "bg-danger";
        moodIcon = "bi-emoji-angry";
    }
    else if (moodValue.Contains("anxious") || moodValue.Contains("nervous"))
    {
        moodClass = "bg-warning";
        moodIcon = "bi-emoji-dizzy";
    }
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-journal-bookmark me-2"></i>
            <h3 class="mb-0">Mood Diary Entry</h3>
        </div>
        <div class="card-body">
            <p class="text-muted fst-italic mb-3">
                <i class="bi bi-calendar-event me-1"></i> @Model.Date.ToString("MMMM dd, yyyy")
            </p>

            <span class="badge @moodClass text-white mb-3">
                <i class="bi @moodIcon me-1"></i> @Model.Mood
            </span>

            <h5 class="mt-4 mb-3"><i class="bi bi-journal-text me-1"></i>My Notes</h5>
            @if (!string.IsNullOrWhiteSpace(Model.Notes))
            {
                var notesParagraphs = Model.Notes.Split(new[] { "\r\n", "\r", "\n" }, StringSplitOptions.RemoveEmptyEntries);
                foreach (var paragraph in notesParagraphs)
                {
                    <p>@paragraph</p>
                }
            }
            else
            {
                <p class="fst-italic text-muted">No notes were added to this entry.</p>
            }
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-pencil me-1"></i> Edit Entry
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Diary
            </a>
        </div>
    </div>
</div>