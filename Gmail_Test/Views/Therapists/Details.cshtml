@model MentalHealthApp.Models.Therapist

@{
    ViewData["Title"] = "Therapist Details";
}

<h2>Therapist Details</h2>

<div>
    <img src="~/img/@Model.ImageFileName" alt="Therapist Image" style="max-height:200px;" />
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Specialization</dd>

        <dt class="col-sm-2">Bio</dt>
        <dd class="col-sm-10">@Model.Bio</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.TherapistId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
