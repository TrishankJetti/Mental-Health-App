@model List<MentalHealthApp.Models.CartItem>
@{
    ViewData["Title"] = "Your Cart";
}

<style>
    .cart-header {
        color: #6b44b3;
        font-weight: 600;
    }

    .cart-img {
        width: 100px;
        height: auto;
        object-fit: cover;
        border-radius: 0.5rem;
    }

    .btn-purple {
        background-color: #6b44b3;
        color: white;
    }

        .btn-purple:hover {
            background-color: #59359b;
            color: white;
        }

    .cart-total {
        font-size: 1.2rem;
        font-weight: bold;
    }
</style>

<div class="container py-4">
    <h2 class="cart-header mb-4">Your Cart</h2>

    @if (Model.Any())
    {
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>$@item.Price</td>
                        <td>
                            <form asp-action="Update" method="post" class="d-flex">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm me-2" style="width: 70px;" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Update</button>
                            </form>
                        </td>
                        <td> $@Model.Sum(item => item.Price * @item.Quantity)</td>
                        <td>
                            <form asp-action="Update" method="post">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="hidden" name="quantity" value="0" />
                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="cart-total">
                Total: $@Model.Sum(item => item.Price * item.Quantity)
            </div>
            <div>
                <form asp-action="Checkout" method="post">
                    @foreach (var item in Model)
                    {
                        <input type="hidden" name="selectedProducts.Index" value="@item.ProductId" />
                        <input type="hidden" name="selectedProducts[@item.ProductId].ProductId" value="@item.ProductId" />
                        <input type="hidden" name="selectedProducts[@item.ProductId].ProductName" value="@item.ProductName" />
                        <input type="hidden" name="selectedProducts[@item.ProductId].Price" value="@item.Price" />
                        <input type="hidden" name="selectedProducts[@item.ProductId].Quantity" value="@item.Quantity" />
                    }
                    <button type="submit" class="btn btn-purple">Checkout</button>
                </form>
            </div>
        </div>
        <div class="mt-3">
            <a asp-action="Clear" class="btn btn-outline-danger">Clear Cart</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">Your cart is empty. Add items from the Shop to get started!</div>
        <a asp-controller="Shop" asp-action="Index" class="btn btn-purple">Browse Products</a>
    }
</div>
