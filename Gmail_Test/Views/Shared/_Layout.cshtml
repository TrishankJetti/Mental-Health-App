@using Microsoft.AspNetCore.Identity
@using MentalHealthApp.Models
@inject UserManager<CustomUser> UserManager
@inject SignInManager<CustomUser> SignInManager
@inject MentalHealthApp.Data.MentalHealthContext DbContext

@{
    var showCheckInReminder = false;
    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            var lastCheck = currentUser.LastMoodCheckIn?.Date ?? DateTime.MinValue;
            if (DateTime.UtcNow.Date > lastCheck.AddDays(2))
            {
                showCheckInReminder = true;
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shanti</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MentalHealthApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <link rel="icon" href="~/img/Icon.ico" />
</head>

<body class="d-flex flex-column min-vh-100">
    <div class="loader-overlay">
        <div class="loader"></div>
        <p class="loader-text">Please Wait</p>
    </div>

    @if (!(ViewData["HideNavbar"] as bool? ?? false))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #6b44b3;">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" alt="Shanti Logo" style="height: 40px; width: auto; margin-right: 8px;" />
                    </a>


                    <div class="collapse navbar-collapse" id="navbarMain">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item position-relative">
                                <a class="nav-link" asp-controller="MoodEntries" asp-action="Index">
                                    Mood Tracker
                                    @if (showCheckInReminder)
                                    {
                                        <span class="pulse-dot position-absolute top-0 start-100 translate-middle bg-danger rounded-circle" style="width: 10px; height: 10px;"></span>
                                    }
                                </a>
                            </li>
                        
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="BreatheExercise">Breathing Exercise</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="HowToUse">FAQ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>


                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Mental Health Support
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#">National Helplines</a></li>
                                        <li><a class="dropdown-item" href="#">Apps & Online Platforms</a></li>
                                        <li><a class="dropdown-item" href="#">Support for Parents</a></li>
                                        <li><a class="dropdown-item" href="#">Cultural Support</a></li>
                                        <li><a class="dropdown-item" href="#">Addiction Services</a></li>
                                        <li><a class="dropdown-item" href="#">Grief & Loss Support</a></li>
                                        <li><a class="dropdown-item" href="#">Sexual Violence Support</a></li>
                                    </ul>
                                </li>
                            </ul>


                        </ul>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="dropdown me-3">
                                <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    Admin Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end"> 
                                    <li><a class="dropdown-item" asp-controller="RoleManagement" asp-action="Index">Role Management</a></li>
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Products Management</a></li>
                                    <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories Management</a></li>
                                </ul>
                            </div>
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var userId = UserManager.GetUserId(User);
                            var notifications = DbContext.Notifications
                            .Where(n => n.UserId == userId && !n.IsRead)
                            .OrderByDescending(n => n.CreatedAt)
                            .Take(5)
                            .ToList();

                            <div class="dropdown me-3">
                                <button class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown">
                                    🔔 (@notifications.Count)
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (notifications.Count == 0)
                                    {
                                        <li class="dropdown-item text-muted">No new notifications</li>
                                    }
                                    else
                                    {
                                        @foreach (var n in notifications)
                                        {
                                            <li class="dropdown-item">
                                                @n.Message <br />
                                                <small class="text-muted">@n.CreatedAt.ToShortTimeString()</small>
                                            </li>
                                        }
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Notifications" asp-action="MarkAllAsRead" method="post">
                                            <button type="submit" class="dropdown-item text-center">Mark all as read</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }

                        <a class="nav-link text-white" asp-controller="Cart" asp-action="Index" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-cart4" style="font-size:25px;"></i>
                        </a>

                        <div class="nav-link">
                            <partial name="_LoginPartial.cshtml" />
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container mt-3 flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white mt-auto" style="background-color: #4b2c7a; padding: 1.5rem 0;">
        <div class="container text-center d-flex flex-column flex-md-row justify-content-center align-items-center gap-2">
            <p class="mb-0">&copy; @DateTime.Now.Year Shanti Mental Health App</p>
            <span class="mx-2 d-none d-md-inline">|</span>
            <div class="text-center">
                <p class="mb-1">Wanna reach out to us?</p>
                <a class="btn btn-outline-light btn-sm" asp-controller="Home" asp-action="Contact">Contact Us</a>
            </div>
        </div>
    </footer>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex-grow: 1;
        }

        footer {
            flex-shrink: 0;
        }

        .pulse-dot {
            animation: pulse 1.5s infinite;
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.5);
            }

            50% {
                box-shadow: 0 0 0 6px rgba(255, 0, 0, 0.2);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(255, 0, 0, 0);
            }
        }
    </style>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
