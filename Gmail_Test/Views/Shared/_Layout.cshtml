<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shanti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MentalHealthApp.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/img/Icon.ico" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

</head>
<body>
        <div class="loader-overlay">
            <div class="loader"></div>
        <p class="loader-text">Please Wait</p>
        </div>
    <header>
       <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 " style="background-color: #6b44b3;">
            <div class="container-fluid">
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-light">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-house-door-fill scale-down-center" viewBox="0 0 16 16">
                                    <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5" />
                                </svg>

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy" >Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="CheckOut" asp-action="Index" > Products</a>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="MoodEntries" asp-action="Index">  Mood Tracker</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="MoodTypes" asp-action="Index">  Mood Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Chat">  Chat</a>
                        </li
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Patients" asp-action="Index"> Your Patients</a>
                        </li
                         <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Appointments" asp-action="Index">Appointment Booking</a>
                        </li>
                           <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Therapists" asp-action="Index">Therapists</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <style>
       .scale-down-center {
    transition: transform 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940);
}

.scale-down-center:hover {
    animation: scale-down-center 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
}

@@keyframes scale-down-center {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.5);
  }
}

a{
    text-decoration:none;
  
}

html, body {
    overflow: hidden;
}



    </style>
    <br/>
    <br/>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
