@using Microsoft.AspNetCore.Identity
@using MentalHealthApp.Models
@inject UserManager<CustomUser> UserManager
@inject SignInManager<CustomUser> SignInManager
@inject MentalHealthApp.Data.MentalHealthContext DbContext

@{
    var showCheckInReminder = false;
    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            var lastCheck = currentUser.LastMoodCheckIn?.Date ?? DateTime.MinValue;
            if (DateTime.UtcNow.Date > lastCheck.AddDays(2))
            {
                showCheckInReminder = true;
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shanti</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MentalHealthApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <link rel="icon" href="~/img/Icon.ico" />
 
</head>
<body>
    <div class="loader-overlay">
        <div class="loader"></div>
        <p class="loader-text">Please Wait</p>
    </div>

    @if (!(ViewData["HideNavbar"] as bool? ?? false))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #6b44b3;">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Shanti</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarMain">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                          
                            <li class="nav-item position-relative">
                                <a class="nav-link" asp-controller="MoodEntries" asp-action="Index">
                                    Mood Tracker
                                    @if (showCheckInReminder)
                                    {
                                        <span class="pulse-dot position-absolute top-0 start-100 translate-middle bg-danger rounded-circle" style="width: 10px; height: 10px;"></span>
                                    }
                                </a>
                            </li>
                            @if (User.IsInRole("Therapist"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="MoodTypes" asp-action="Index">Mood Types</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="BreatheExercises">Breathing  Exercise</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Patients" asp-action="Index">Your Patients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointment Booking</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Therapists" asp-action="Index">Therapists</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="HowToUse">FAQ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>
                        </ul>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="dropdown me-3">
                                <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    Admin Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="MoodTypes" asp-action="Index">Mood Types</a></li>
                                    <li><a class="dropdown-item" asp-controller="RoleManagement" asp-action="Index">Role Management</a></li>
                                    <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">Products Management</a></li>
                                </ul>
                            </div>
                        }



                        @if (SignInManager.IsSignedIn(User))
                        {
                            var userId = UserManager.GetUserId(User);
                            var notifications = DbContext.Notifications
                            .Where(n => n.UserId == userId && !n.IsRead)
                            .OrderByDescending(n => n.CreatedAt)
                            .Take(5)
                            .ToList();

                            <!-- Notifications Dropdown -->
                            <div class="dropdown me-3">
                                <button class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown">
                                    🔔 (@notifications.Count)
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (notifications.Count == 0)
                                    {
                                        <li class="dropdown-item text-muted">No new notifications</li>
                                    }
                                    else
                                    {
                                        @foreach (var n in notifications)
                                        {
                                            <li class="dropdown-item">
                                                @n.Message <br />
                                                <small class="text-muted">@n.CreatedAt.ToShortTimeString()</small>
                                            </li>
                                        }
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Notifications" asp-action="MarkAllAsRead" method="post">
                                            <button type="submit" class="dropdown-item text-center">Mark all as read</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }


                        <!-- Cart Icon -->
                        <a class="nav-link text-white" asp-controller="Cart" asp-action="Index" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-cart4" style="font-size:25px;"></i>
                        </a>

                        <!-- Login Partial -->
                        <div class="nav-link">
                            <partial name="_LoginPartial.cshtml" />
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        .pulse-dot {
            animation: pulse 1.5s infinite;
        }

        @@keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.5); }
            50% { box-shadow: 0 0 0 6px rgba(255, 0, 0, 0.2); }
            100% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0); }
        }
    </style>

    @RenderBody()

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
