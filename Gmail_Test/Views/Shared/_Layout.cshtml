@using Microsoft.AspNetCore.Identity
    @using MentalHealthApp.Models
    @inject UserManager<CustomUser> UserManager
    @inject SignInManager<CustomUser> SignInManager

@{
    bool showCheckInReminder = false; // At first the program sets the CheckInReminder to false

    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);  // This line grabs the current user

        if (currentUser != null)
        {
            if (currentUser.LastMoodCheckIn.HasValue)
            {
                DateTime lastCheck = currentUser.LastMoodCheckIn.Value.Date;
                DateTime today = DateTime.UtcNow.Date;

                if (today > lastCheck.AddDays(2)) // Checks whether it been 2 days or more since the last check in.
                {
                    showCheckInReminder = true;
                }
            }
            else
            {
                // Never checked in
                showCheckInReminder = true;
            }
        }
    }
}


