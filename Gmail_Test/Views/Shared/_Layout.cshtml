@using Microsoft.AspNetCore.Identity
@using MentalHealthApp.Models
@using Microsoft.EntityFrameworkCore
@inject UserManager<CustomUser> UserManager
@inject SignInManager<CustomUser> SignInManager
@inject MentalHealthApp.Data.MentalHealthContext DbContext

@{
    var showCheckInReminder = false;
    var pendingRequestsCount = 0;

    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            var lastCheck = currentUser.LastMoodCheckIn?.Date ?? DateTime.MinValue;
            if (DateTime.UtcNow.Date > lastCheck.AddDays(2))
            {
                showCheckInReminder = true;
            }

            // Get pending friend requests count
            pendingRequestsCount = await DbContext.Friendships
                .CountAsync(f => f.AddresseeId == currentUser.Id && f.Status == FriendshipStatus.Pending);
        }
    }

    var upcomingEventsCount = 0; // UpcomingEvents variable set to 0 initally 

    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User); // Get userid by identity 
        if (currentUser != null)
        {
            var now = DateTime.UtcNow;
            var nearDueThreshold = now.AddHours(24); // set a due date of 24 hours 

            upcomingEventsCount = await DbContext.PlannerEvents
                .Where(e => e.UserId == currentUser.Id && !e.IsCompleted && e.StartTime <= nearDueThreshold) // Find events where the due date in less than or 24 hours.
                .CountAsync();
        }
    }

    var showUpcomingEventDot = upcomingEventsCount > 0;

}




