@model IEnumerable<MentalHealthApp.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Role Management";
}

<h1>Manage User Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userRole in Model)
        {
            <tr>
                <td>@userRole.UserName</td>
                <td>
                    <select asp-for="@userRole.SelectedRole" asp-items="@(new SelectList(userRole.Roles, "Value", "Text", userRole.SelectedRole))">
                    </select>
                </td>
                <td>
                    <form asp-action="AssignRole" method="post">
                        <input type="hidden" name="UserId" value="@userRole.UserId" />
                        <button type="submit" class="btn btn-primary">Assign Role</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
