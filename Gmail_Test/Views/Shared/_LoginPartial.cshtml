@using Microsoft.AspNetCore.Identity
@using MentalHealthApp.Models
@using MentalHealthApp.Models

@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

        // Retrieve the current user FirstName to dispaly in the navbar.
        var currentUser = await UserManager.GetUserAsync(User);
        var firstName = currentUser?.FirstName ?? "User";


        <!--Style sheet for icons in html derived from Bootstrap-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">


    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Logged in as @firstName <i class="bi bi-person-circle" style="font-size: 30px;"></i> <!--Icon-->
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="nav-link" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link p-0 m-0 text-white" title="Logout">
                <i class="bi bi-box-arrow-right" style="font-size: 30px;"></i>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

