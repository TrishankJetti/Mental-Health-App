@model List<CustomUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<CustomUser> UserManager

@{
    ViewData["Title"] = "My Friends";
    var currentUser = await UserManager.GetUserAsync(User);

    // Gathers all the pending requests as a list else it will create a new list called FriendShip.
    var pendingRequests = ViewBag.PendingRequests as List<Friendship> ?? new List<Friendship>();
}

<div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
    <h3 class="mb-0">
        <i class="bi bi-people-fill text-purple me-2"></i>
        Your Friends
    </h3>
</div>
@if (Model.Any())
{
    <div class="row">
        @foreach (var friend in Model) // Grabs all Freinds from the Friends Model. 
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@friend.UserName</h5>
                        <p class="card-text">@friend.Email</p>

                        <div class="btn-group w-100">
                            <a asp-controller="Messages" asp-action="Chat" asp-route-friendId="@friend.Id"
                               class="btn btn-primary btn-sm">💬 Message</a>

                            <!-- Dropdown for safety actions -->
                            <button type="button" class="btn btn-outline-danger btn-sm dropdown-toggle dropdown-toggle-split"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="visually-hidden">Safety Options</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-action="Unfriend" method="post">
                                        <input type="hidden" name="friendId" value="@friend.Id" />
                                        <button type="submit" class="dropdown-item text-warning"
                                                onclick="return confirm('Are you sure you want to remove this friend?')">
                                            🚫 Unfriend
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="Block" method="post">
                                        <input type="hidden" name="userId" value="@friend.Id" />
                                        <button type="submit" class="dropdown-item text-danger"
                                                onclick="return confirm('⚠️ WARNING: This will block all communication. Are you sure?')">
                                            ⚠️ Block User
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

else
{
    <div class="alert alert-info">
        <p>You don't have any friends yet. <a asp-action="Find" class="alert-link">Find friends</a> to start chatting!</p>
    </div>
}
