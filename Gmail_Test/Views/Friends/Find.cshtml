@model List<CustomUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<CustomUser> UserManager

@{
    ViewData["Title"] = "Find Friends";
}
<div class="container">
    <!-- Banner -->
    <div class="text-center mb-4">
        <img src="/img/New Project (11).png" alt="Shanti Banner" class="banner-image"
             style="width: 100%; max-width: 800px; height: 300px; object-fit: cover; border-radius: 15px;">
    </div>


<h2>Find Friends</h2>



<!-- SEARCH BAR FOR FIND FRIENDS PAGE -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Find" method="get" class="row g-2">
            <div class="col-md-8">
                <input type="text" name="searchString" value="@ViewBag.SearchString"
                       class="form-control" placeholder="Search users by name or email..." />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-purple w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Find" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <!-- Profile Picture -->
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(user.PfpName))
                            {
                                <img src="~/img/pfps/@user.PfpName" 
                                     alt="@user.UserName" 
                                     class="rounded-circle" 
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            }
                            else
                            {
                                <!-- Show initials if no profile picture is set by user. -->
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center bg-primary text-white" 
                                     style="width: 80px; height: 80px; font-size: 1.5rem;">
                                    @user.UserName?[0].ToString().ToUpper() <!-- Converts the username into a singular string for the pfp.-->
                                </div>
                            }
                        </div>

                        <h5 class="card-title">@user.FirstName @user.LastName </h5>
                        
                        <form asp-action="SendRequest" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Add Friend
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <img src="~/img/ShantiFriends.png"
             alt="No items available"
             style="max-width: 500px; width: 100%; height: auto;" />
        <p class="mt-3 text-muted">No Friends found :(</p>
        <a href="javascript:history.back()" class="btn btn-purple mb-4">
            <i class="bi bi-arrow-left-circle me-2"></i> Back
        </a>
    </div>
}