@model List<CustomUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<CustomUser> UserManager

@{
    ViewData["Title"] = "Find Friends";
}

<h2>Find Friends</h2>

<!-- SEARCH BAR FOR FIND FRIENDS PAGE -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Find" method="get" class="row g-2">
            <div class="col-md-8">
                <input type="text" name="searchString" value="@ViewBag.SearchString"
                       class="form-control" placeholder="Search users by name or email..." />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-purple w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Find" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body text-center">
                        <!-- Profile Picture -->
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(user.PfpName))
                            {
                                <img src="~/img/pfps/@user.PfpName" 
                                     alt="@user.UserName" 
                                     class="rounded-circle" 
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            }
                            else
                            {
                                <!-- Show initials if no profile picture -->
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center bg-primary text-white" 
                                     style="width: 80px; height: 80px; font-size: 1.5rem;">
                                    @user.UserName?[0].ToString().ToUpper()
                                </div>
                            }
                        </div>

                        <h5 class="card-title">@user.UserName</h5>
                        
                        <form asp-action="SendRequest" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Add Friend
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No users found to add as friends.</p>
    </div>
}