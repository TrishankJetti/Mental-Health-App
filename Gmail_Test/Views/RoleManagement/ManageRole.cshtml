
@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Manage User Roles";
    var userId = ViewBag.userId;
}

<h2>Manage User Roles</h2>

<form asp-action="ManageRole" method="post">
<input type="hidden" name="userId" value="@userId" />
<div class="form-group">
        @for (int i = 0; i < Model.Count; i++) // For every Role within the RoleViewModel which gathers all the roiles within the Role table, the Role's Id , Name with a check box will show so that the Admin user may assign the user their own roles.'
        {
    <div class="form-check">
    <input type="hidden" asp-for="@Model[i].RoleId" />
    <input type="hidden" asp-for="@Model[i].RoleName" />
    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
    </div>
        }
</div>
<button type="submit" class="btn btn-primary">Update</button>
<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>