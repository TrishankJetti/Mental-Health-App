@model IEnumerable<MentalHealthApp.Models.CustomUser>
@inject UserManager<MentalHealthApp.Models.CustomUser> UserManager
@using Microsoft.AspNetCore.Identity

<table class="table table-hover table-danger">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th> <!-- Changed from "Admin Role" to "Roles" -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @{
                        // Retrieve all roles for the user
                        var roles = await UserManager.GetRolesAsync(user);
                        // Join the roles into a comma-separated string for display
                        var rolesDisplay = string.Join(", ", roles);
                    }
                    @rolesDisplay
                </td>
                <td>
                    <form asp-action="ManageRole" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" name="isAdmin" value="@(await UserManager.IsInRoleAsync(user, "Admin") ? "False" : "True")">
                            @(await UserManager.IsInRoleAsync(user, "Admin") ? "Remove Admin Role" : "Make Admin")
                        </button>
                        <button type="submit" name="isTherapist" value="@(await UserManager.IsInRoleAsync(user, "Therapist") ? "False" : "True")">
                            @(await UserManager.IsInRoleAsync(user, "Therapist") ? "Remove Therapist Role" : "Make Therapist")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
