@model List<MentalHealthApp.Models.PlannerEvent>
@{
    ViewData["Title"] = "All Events";
}

<h1>@ViewData["Title"]</h1>



    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


<div class="mb-3">
    <a class="btn btn-success" asp-action="Create">Add Event</a>
    <a class="btn btn-warning" asp-action="Index">Filter Page ⌛</a> <!--filter page where users can filter events through date-->
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start → End</th>
            <th>Type</th>
            <th>Priority</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr class="@(e.IsCompleted ? "table-success" : "")">
                <td>@e.Title</td>
                <td>@e.StartTime.ToString("HH:mm, MMM dd yyyy") - @e.EndTime.ToString("HH:mm, MMM dd yyyy")</td>
                <td>@e.EventType</td>
                <td>@e.Priority</td>
                <td>
                    <form asp-action="ToggleCompleteFilter" asp-route-id="@e.Id" method="post">
                        <input type="checkbox" onchange="this.form.submit();" @(e.IsCompleted ? "checked" : "") />
                    </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@e.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this event?');">❌</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


