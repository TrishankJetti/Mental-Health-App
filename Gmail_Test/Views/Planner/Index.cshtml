@model List<MentalHealthApp.Models.PlannerEvent>
@{
    ViewBag.Title = "Planner";
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.Today;
}

<h2>Events for @selectedDate.ToString("dddd, MMM dd yyyy")</h2>

<div class="mb-3">
    <form method="get" asp-action="Index" class="d-inline">
        <input type="date" name="selectedDate" value="@selectedDate.ToString("yyyy-MM-dd")" class="form-control d-inline-block" style="width:auto;">
        <button type="submit" class="btn btn-primary">Go</button>
    </form>

    <a class="btn btn-success" asp-action="Create">Add Event</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start → End</th>
            <th>Type</th>
            <th>Priority</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr class="@(e.IsCompleted ? "table-success" : "")">
                <td>@e.Title</td>
                <td>@e.StartTime.ToString("HH:mm, MMM dd yyyy") - @e.EndTime.ToString("HH:mm, MMM dd yyyy")</td>
                <td>@e.EventType</td>
                <td>@e.Priority</td>
                <td>
                    <form asp-action="ToggleComplete" asp-route-id="@e.Id" method="post">
                        <input type="hidden" name="selectedDate" value="@selectedDate.ToString("yyyy-MM-dd")" />
                        <input type="checkbox" onchange="this.form.submit();" @(e.IsCompleted ? "checked" : "") />
                    </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@e.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this event?');">❌</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Success"] != null)
    {
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["Success"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
    }