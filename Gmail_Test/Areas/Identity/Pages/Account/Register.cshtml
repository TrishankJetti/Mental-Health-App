@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["HideNavbar"] = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register - Shanti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #6b44b3;
            margin: 0;
            color: white;
        }

        .card-container {
            max-width: 500px;
            width: 100%;
            border-radius: 15px;
            background-color: white;
            color: black;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            padding: 2rem;
        }

        .back-arrow {
            position: fixed;
            top: 16px;
            left: 16px;
            color: white;
            font-size: 2rem;
            text-decoration: none;
            z-index: 999;
            transform: scale(1.0);
            transition: transform 0.2s ease;
        }

            .back-arrow:hover {
                transition: transform 0.2s ease;
                transform: scale(1.5);
            }

        .text-purple {
            color: #6f42c1;
        }

        .border-purple {
            border-color: #6f42c1 !important;
        }

        .btn-purple {
            background-color: #6f42c1;
            color: white;
            border: none;
        }

            .btn-purple:hover {
                background-color: #5a32a3;
            }

        .btn-outline-purple {
            border: 2px solid #6f42c1;
            color: #6f42c1;
        }

            .btn-outline-purple:hover {
                background-color: #6f42c1;
                color: white;
            }
    </style>
</head>
<body>
    <a href="javascript:history.back()" class="back-arrow" title="Click to Go Back!">&#8592;</a>

    <br />
    <br />
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card-container">
            <h2 class="text-center text-purple mb-3">Create Your Account</h2>
            <hr />
            <br />
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control border-purple" placeholder="First Name" />
                    <label asp-for="Input.FirstName" class="text-purple">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control border-purple" placeholder="Last Name" />
                    <label asp-for="Input.LastName" class="text-purple">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Age" class="form-control border-purple" id="inputAge" placeholder="Age" type="number">
                    <label for="inputAge" class="text-purple">Age</label>
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control border-purple" placeholder="Email" />
                    <label asp-for="Input.Email" class="text-purple">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control border-purple" placeholder="Password" />
                    <label asp-for="Input.Password" class="text-purple">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control border-purple" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword" class="text-purple">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-lg btn-purple w-100">Register</button>
            </form>

            <hr />

            <div class="text-center">
                <h4 class="text-purple mb-3">Or Sign Up With</h4>
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-muted">No external authentication services are configured.</p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-purple w-100 mb-2" name="provider" value="@provider.Name" title="Sign up using @provider.DisplayName">
                                <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>

            <hr />
            <div class="text-center">
                <p>Already have an account? <a asp-page="./Login" class="text-purple fw-bold">Login here</a></p>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
