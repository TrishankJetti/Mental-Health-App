@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    ViewData["HideNavbar"] = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - Shanti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #6b44b3;
            margin: 0;
            color: white;
        }

        .login-container {
            background-color: white;
            color: black;
            padding: 2rem;
            border-radius: 12px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .back-arrow {
            position: fixed;
            top: 16px;
            left: 16px;
            color: white;
            font-size: 2rem;
            text-decoration: none;
            z-index: 999;
            transition: transform 0.2s ease;
            transform: scale(1.0);
        }

        .back-arrow:hover {
            position: fixed;
            top: 16px;
            left: 16px;
            color: white;
            font-size: 2rem;
            text-decoration: none;
            z-index: 999;
                transition: transform 0.2s ease;
                transform: scale(1.5);
            }

        a {
            color: #6b44b3;
        }

            a:hover {
                text-decoration: underline;
            }

        .external-login-buttons button {
            margin: 0.3rem 0;
            width: 100%;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <a href="javascript:history.back()" class="back-arrow" ata-toggle="tooltip" data-placement="bottom" title="Click to Go Back!">&#8592;</a>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="login-container">
            <h2 class="text-center mb-4" style="color:#6b44b3;">Log in to Shanti</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>

                <button type="submit" class="btn w-100 text-white" style="background-color:#6b44b3;">Log in</button>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="external-login-buttons mt-4">
                    <p class="text-center">Or log in using:</p>
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            }

            <div class="mt-3 text-center">
                <a asp-page="./ForgotPassword">Forgot your password?</a><br />
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a><br />
                <a asp-page="./ResendEmailConfirmation">Resend confirmation</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
