@page
@model ConfirmEmailModel
@using MentalHealthApp.Areas.Identity.Pages.Account

@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100 text-center">
    <div class="alert alert-warning w-100 text-center">Complete your Profile!</div>

  

    <div class="mb-4">
        <img src="~/img/ConfirmEmailMonster.png" alt="Friendly Reminder Monster" class="img-fluid" style="max-height: 400px;" />
    </div>

    <h1 class="mt-3">Please Log In</h1>
    <p class="lead mt-2">
        Your account has been successfully created. Finish adding details to your profile!
    </p>

    <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/Identity/Account/Manage"
       class="btn btn-primary mt-3">
        Log In and Check Profile
    </a>
</div>
