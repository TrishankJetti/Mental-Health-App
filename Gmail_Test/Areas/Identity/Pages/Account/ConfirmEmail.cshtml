@page
@model ConfirmEmailModel
@using MentalHealthApp.Areas.Identity.Pages.Account

@{
    ViewData["Title"] = "Confirm Email";
}
<h1>Account Creation Success</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .reminder-face {
        font-size: 100px;
    }

    .reminder-page {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
    }
</style>

<body>
    <div class="alert alert-warning text-center">Complete your Profile!</div>
    <div class="reminder-page">
        <div class="reminder-face">🖌️</div>
        <h1 class="mt-3">Please Log In</h1>
         <p class="lead mt-2">
            Your account has been successfully created. Finish adding details to your profile!
        </p> 
        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/Identity/Account/Manage" class="btn btn-primary">
            Log In and Check Profile
        </a>
    </div>


</body>
